<Window
    x:Class="MainApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MainApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://resourcekey.com/ui"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <Button
            x:Name="btnSwap"
            Click="btnSwap_Click"
            Content="Swap"
            FontSize="48"
            Foreground="{ui:SkinResource ResourceKey=MainForeground}" />

        <Rectangle
            Height="100"
            Margin="10"
            Fill="{ui:SkinResource ResourceKey=MainBackground}" />


    </StackPanel>
</Window>
